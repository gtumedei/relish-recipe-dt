{
  "tasks": {
    "api:start": "cd apps/api && deno task start",
    "cli:start": "cd apps/cli && deno task start",
    "setup": "docker compose --profile setup run --rm relish-setup-generator",
    "sys:up": "docker compose up relish mongod mongot --build -d",
    "sys:down": "docker compose down",
    "db:start": "docker compose up mongod mongot -d",
    "db:stop": "docker compose stop mongod mongot",
    "db:push": "cd packages/storage && deno run -A --env-file=../../.env ../../node_modules/.bin/prisma db push && deno run -A create-vector-indexes.ts",
    "db:generate": "cd packages/storage && prisma generate",
    "check": "deno check -q; echo; deno lint -q"
  },
  "workspace": ["./apps/*", "./packages/*"],
  "nodeModulesDir": "auto",
  "unstable": ["detect-cjs", "sloppy-imports"],
  "imports": {
    "@ai-sdk/google": "npm:@ai-sdk/google@^2.0.17",
    "@ai-sdk/openai": "npm:@ai-sdk/openai@^2.0.44",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2",
    "ai": "npm:ai@^5.0.59",
    "dayjs": "npm:dayjs@^1.11.18",
    "openai": "npm:openai@^6.10.0",
    "zod": "npm:zod@^4.1.11"
  },
  "fmt": {
    "semiColons": false
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any", "no-slow-types"]
    }
  }
}
