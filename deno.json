{
  "tasks": {
    "cli:start": "cd packages/cli && deno run start",
    "cli:bundle": "cd packages/cli && deno run bundle",
    "cli:compile": "cd packages/cli && deno run compile",
    "db:prepare": "dotenv -e ./packages/env/.env -- docker compose --profile setup run --rm setup-generator",
    "db:start": "dotenv -e ./packages/env/.env -- docker compose up mongod mongot -d",
    "db:push": "cd packages/storage && dotenv -e ../env/.env -- prisma db push && deno run -A create-vector-indexes.ts",
    "db:generate": "cd packages/storage && prisma generate"
  },
  "workspace": ["./packages/*"],
  "nodeModulesDir": "auto",
  "unstable": ["detect-cjs", "sloppy-imports"],
  "imports": {
    "@ai-sdk/google": "npm:@ai-sdk/google@^2.0.17",
    "@ai-sdk/openai": "npm:@ai-sdk/openai@^2.0.44",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2",
    "ai": "npm:ai@^5.0.59",
    "dayjs": "npm:dayjs@^1.11.18",
    "dotenv-cli": "npm:dotenv-cli@^11.0.0",
    "openai": "npm:openai@^6.10.0",
    "zod": "npm:zod@^4.1.11"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}
