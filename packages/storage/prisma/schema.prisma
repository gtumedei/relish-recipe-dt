generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
  runtime  = "deno"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ---
// Core collections
// ---

model Dish {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  name            String         @unique
  nameEmbedding   Float[]
  description     String
  recipes         Recipe[]
  media           Media[]
  searchMetadata  SearchMetadata
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  recipeInstances UserRecipe[]
}

model Recipe {
  id               String          @id @default(auto()) @map("_id") @db.ObjectId
  dishId           String          @db.ObjectId
  dish             Dish            @relation(fields: [dishId], references: [id])
  ingredients      IngredientRef[]
  tools            ToolRef[]
  steps            Step[]
  totalPrepSeconds Int
  media            Media[]
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}

model UserRecipe {
  id               String              @id @default(auto()) @map("_id") @db.ObjectId
  dishId           String              @db.ObjectId
  dish             Dish                @relation(fields: [dishId], references: [id])
  ingredients      UserIngredientRef[]
  tools            ToolRef[]
  steps            UserStep[]
  totalPrepSeconds Int?
  sourceId         String              @db.ObjectId
  source           ProcessedUrl        @relation(fields: [sourceId], references: [id])
  index            Int
  modelConfidence  Float
  media            Media[]
  location         Location
  language         String // ISO 639
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
}

type IngredientRef {
  ingredientOrDishId String @db.ObjectId // TODO: relations in composite fields are not supported. Make sure this works well when querying the db
  quantity           Int
  unit               String
}

type UserIngredientRef {
  ingredientOrDishId String  @db.ObjectId // TODO: relations in composite fields are not supported. Make sure this works well when querying the db
  quantity           Int?
  unit               String?
}

model Ingredient {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String   @unique
  nameEmbedding Float[]
  media         Media[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

type Step {
  description String
  ingredients IngredientRef[]
  tools       ToolRef[]
  prepSeconds Int
}

type UserStep {
  description String
  ingredients UserIngredientRef[]
  tools       ToolRef[]
  prepSeconds Int?
}

type ToolRef {
  tool         String   @db.ObjectId
  alternatives String[] @db.ObjectId
}

model Tool {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String   @unique
  nameEmbedding Float[]
  media         Media[]
  createdAt     DateTime @default(now())
}

type Media {
  url         String
  type        MediaType
  description String?
  createdAt   DateTime  @default(now())
}

type Location {
  string    String
  geonameId String?
}

model ProcessedUrl {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  url         String       @unique
  userRecipes UserRecipe[]
  createdAt   DateTime     @default(now())
}

type SearchMetadata {
  youtube String?
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
}

// ---
// Utility collections
// ---

model ApiKey {
  id        String             @id @default(auto()) @map("_id") @db.ObjectId
  key       String             @unique
  name      String
  access    CollectionAccess[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

type CollectionAccess {
  collection String
  rules      AccessRule[]
}

enum AccessRule {
  CREATE
  READ
  UPDATE
  DELETE
  TASKS
}

model Task {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  status      TaskStatus
  logs        LogEntry[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  completedAt DateTime?
}

enum TaskStatus {
  RUNNING
  COMPLETED
  FAILED
  CANCELED
}

type LogEntry {
  timestamp DateTime
  payload   String[]
}
